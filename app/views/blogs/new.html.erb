<div class="contents row">
  <a href="/">投稿一覧にもどる</a>
  <%= form_tag('/write', method: :post) do %>
    <h3>
      投稿する
    </h3>
    <p><input type="text" name="title" placeholder="タイトル（30字以内）"></p>
    <p><input type="text" name="image" placeholder="画像のURL"></p>
    <textarea name="content" placeholder="記事を書いてください（140字以内）" rows="10" cols="50"></textarea>
    <p><input type="submit" value="投稿"></p>
  <% end %>
</div>
